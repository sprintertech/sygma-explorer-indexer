{
  "name": "chainbridge-explorer-indexer",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "scripts": {
    "start:dev": "nodemon",
    "start:prod": "node ./build/index.js",
    "build": "tsc",
    "test": "jest -i --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "copy-config-for-dev": "cp ./config/sygma-explorer-runtime-config.example.json ./public/sygma-explorer-runtime-config.json",
    "prisma:generate": "prisma generate",
    "index:fetch": "ts-node src/indexer",
    "index:fetch:prod": "docker-compose -f docker-compose.full.yml run nodejs node build/indexer/index.js",
    "index:resetDB": "ts-node src/indexer/resetDB",
    "index:resetDB:prod": "docker-compose -f docker-compose.full.yml run nodejs node build/indexer/resetDB.js",
    "index:bootstrap": "yarn index:resetDB && yarn index:fetch",
    "start:mongo": "docker-compose -f docker-compose.only-mongo.yml up -d",
    "stop:mongo": "docker-compose -f docker-compose.only-mongo.yml down",
    "start:full": "docker-compose -f docker-compose.full.yml up -d",
    "start:stop": "docker-compose -f docker-compose.full.yml down",
    "build:nodejs:container": "docker-compose -f docker-compose.full.yml build nodejs",
    "deploy:prod": "pm2-runtime ecosystem.prod.config.js",
    "deploy:dev": "pm2 start ecosystem.dev.config.js",
    "start:worker": "ts-node -r tsconfig-paths/register --transpile-only src/indexer-worker/index.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.145.0",
    "@celo-tools/celo-ethers-wrapper": "^0.0.5",
    "@chainsafe/chainbridge-contracts": "3.1.0",
    "@prisma/client": "^4.1.0",
    "cors": "^2.8.5",
    "docker-secret": "^1.2.4",
    "dotenv": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "ethers": "^5.4.6",
    "express": "^4.17.1",
    "node-cache": "^5.1.2",
    "pm2": "^5.1.2"
  },
  "devDependencies": {
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.13",
    "@types/jest": "^27.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.7.10",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^5.33.0",
    "dotenv-cli": "^4.0.0",
    "eslint": "^8.21.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.24.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "eslint-plugin-standard": "^5.0.0",
    "jest": "^27.1.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.7.1",
    "prisma": "^4.1.0",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "ts-node": "^10.2.1",
    "typescript": "^4.7.4",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
