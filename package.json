{
  "name": "sygmaprotocol-explorer-indexer",
  "version": "1.0.0",
  "main": "index.js",
  "license": "UNLICENSED",
  "engines": {
    "node": ">=18.0.0"
  },
  "scripts": {
    "start:dev": "nodemon",
    "start:prod": "node ./build/index.js",
    "build": "tsc",
    "test": "jest -i --forceExit --detectOpenHandles",
    "test:watch": "jest --watch",
    "copy-config-for-dev": "cp ./config/sygma-explorer-runtime-config.example.json ./public/sygma-explorer-runtime-config.json",
    "prisma:generate": "prisma generate",
    "index:fetch": "ts-node src/indexer",
    "index:fetch:prod": "docker-compose -f docker-compose.full.yml run nodejs node build/indexer/index.js",
    "index:resetDB": "ts-node src/indexer/resetDB",
    "index:resetDB:prod": "docker-compose -f docker-compose.full.yml run nodejs node build/indexer/resetDB.js",
    "index:bootstrap": "yarn index:resetDB && yarn index:fetch",
    "lint": "yarn run lint:style && yarn run lint:types",
    "lint:fix": "yarn run lint:style --fix && yarn run lint:types",
    "lint:style": "eslint --color --ext .ts src/ ",
    "lint:types": "tsc --noEmit --pretty",
    "start:mongo": "docker-compose -f docker-compose.only-mongo.yml up -d",
    "stop:mongo": "docker-compose -f docker-compose.only-mongo.yml down",
    "start:full": "docker-compose -f docker-compose.full.yml up -d",
    "start:stop": "docker-compose -f docker-compose.full.yml down",
    "build:nodejs:container": "docker-compose -f docker-compose.full.yml build nodejs",
    "deploy:prod": "pm2-runtime ecosystem.prod.config.js",
    "deploy:dev": "pm2 start ecosystem.dev.config.js",
    "start:worker": "ts-node -r tsconfig-paths/register --transpile-only src/indexer-worker/index.ts",
    "start:stub": "docker-compose -f docker-compose.stub.yml up",
    "index:substrate": "nodemon"
  },
  "dependencies": {
    "@aws-sdk/client-ssm": "^3.145.0",
    "@buildwithsygma/sygma-contracts": "2.3.0",
    "@celo-tools/celo-ethers-wrapper": "^0.0.5",
    "@ethersproject/bignumber": "^5.7.0",
    "@ethersproject/providers": "^5.7.2",
    "@fastify/compress": "6.2.1",
    "@fastify/cors": "^8.2.1",
    "@openzeppelin/contracts": "^4.8.3",
    "@polkadot/api": "^10.6.1",
    "@polkadot/types": "10.9.1",
    "@prisma/client": "^4.1.0",
    "@types/mongodb": "^4.0.7",
    "cors": "^2.8.5",
    "docker-secret": "^1.2.4",
    "dotenv": "^10.0.0",
    "dotenv-flow": "^3.2.0",
    "ethers": "^6.3.0",
    "fastify": "4.17.0",
    "fastify-healthcheck": "^4.4.0",
    "mongodb": "^5.5.0",
    "node-cache": "^5.1.2"
  },
  "devDependencies": {
    "@chainsafe/eslint-config": "^1.1.0",
    "@rushstack/eslint-patch": "^1.2.0",
    "@types/cors": "^2.8.12",
    "@types/eslint": "^8",
    "@types/jest": "^27.0.1",
    "@types/morgan": "^1.9.3",
    "@types/node": "^16.7.10",
    "@types/supertest": "^2.0.11",
    "cross-fetch": "3.1.5",
    "dotenv-cli": "^4.0.0",
    "eslint": "^8.21.0",
    "jest": "^27.1.0",
    "morgan": "^1.10.0",
    "nodemon": "^2.0.12",
    "prettier": "^2.7.1",
    "prisma": "^4.1.0",
    "supertest": "^6.1.6",
    "ts-jest": "29.1.0",
    "ts-node": "^10.2.1",
    "typescript": "^4.7.4",
    "winston": "^3.3.3",
    "winston-daily-rotate-file": "^4.5.5"
  }
}
